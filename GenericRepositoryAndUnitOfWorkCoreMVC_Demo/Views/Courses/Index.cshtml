@model IEnumerable<GenericRepositoryAndUnitOfWorkCoreMVC_Demo.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center text-uppercase">list of courses</h3>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fas fa-plus-circle"></i> Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CourseName)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> <a asp-action="Edit" asp-route-id="@item.Id">@item.CourseName</a></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-0"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
