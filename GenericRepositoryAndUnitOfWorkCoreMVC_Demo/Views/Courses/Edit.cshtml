@model GenericRepositoryAndUnitOfWorkCoreMVC_Demo.Models.Course

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Course</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary rounded-0" />
                <a asp-action="Index" class="btn btn-primary rounded-0">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
